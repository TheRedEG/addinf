#ifndef ADDINF_H_
#define ADDINF_H_

#include <stdlib.h>

typedef struct	s_add_data
{
  int	len1;
  int	len2;
  int	isneg1;
  int	isneg2;
}		t_add_data;

typedef struct	s_add_op
{
  char	*s1;
  int	s1len;
  char	*s2;
  int	s2len;
  int	negate;
  int	nblen;
  int	add;
  char	*result;
}		t_add_op;

#endif
